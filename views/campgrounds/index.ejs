<%- include('../partials/header'); -%>

 <div class="container">
     <header class="mt-3 border-bottom pb-3">
         <div class="row">
             <div class="p-5 col-md-6">
                 <h3 class="text-uppercase font-weight-light">
                     Welcome
                     <span class="text-primary">
                         Mashaddien
                     </span>
                 </h3>
                 <h5 class="text-capitalize font-weight-light">
                     This section have all subscribers bootcards
                     <br>
                     <span class="text-success">
                         Boot-Card & Comments
                     </span>
                 </h5>
                 <a
                   href="/bootcards/fab"
                   class="mt-4 btn text-uppercase font-weight-light btn-warning text-white w-100 p-2">
                     Create a new your Boot Card
                 </a>
                 <div class="m-2">
                     <div class="float-left">
                         <% if(error && error.length > 0){ %>
                             <div class="alert bg-danger text-white text-uppercase small" role="alert">
                                 <%= error %>
                             </div>
                         <% } %>
                         <% if(success && success.length > 0){ %>
                             <div class="alert " role="alert">
                                 <%= success %>
                             </div>
                         <% } %>
                     </div>
                 </div>
             </div>
             <div class="p-3 col-md-6 border" style="border-radius: 10px">
                 <h6 class="text-capitalize font-weight-lighter">
<!--                     someone else here -->
                     <span class="text-info">
                         this section is private. And users don't delete (other) users cards and comments.
                     </span>
                 </h6>
                 <h6 class="text-uppercase font-weight-light mt-2">
                     Card theme :
                     <ul class="text-warning text-uppercase">
                         <li>lesson schedules</li>
                         <li>course news</li>
                         <li>friends & typeof chat</li>
                         <li>class problem solving</li>
                         <li>discuss about homework</li>
                     </ul>
                 </h6>
             </div>
         </div>
     </header>
     <div class="row mt-1">
         <% campgrounds.forEach(function(campground){ %>
             <div class="col-md-6 mt-3">
                 <div class="card" style="border-radius: 15px">
                     <% if( campground.image){ %>
                        <div class="card-header" style="border-radius: 15px">
                            <img src="<%= campground.image%>" class="img-fluid rounded-pill" alt="<%= campground.name%>">
                        </div>
                     <% } %>
                     <div class="card-body">
                         <div class="border d-flex align-items-center justify-content-around p-2"
                              style="border-radius: 10px">
                             <div class="row">
                                 <h3
                                         class="font-weight-normal mt-1 text-info text-uppercase"
                                         style="font-size: 1em">
                                     @<%= campground.author.username%>
                                 </h3>
                                 <h3 class="font-weight-light mt-1 ml-4" style="font-size: 1em">
                                     DT:
                                     <%= `${campground.created.getDate()+1}-${campground.created.getMonth()+1
                                     }-${campground.created.getFullYear()}`%>
                                 </h3>
                             </div>
                         </div>
                         <div class="card-footer border mt-2" style="border-radius: 15px">
                             <h5 class="text-left font-weight-light p-1 pb-3">
                                 <%= campground.name%>
                             </h5>
                         </div>
                         <div class="mt-2">
                             <p class="text-justify font-weight-light border-top pt-3">
                                 <%= campground.description%>
                             </p>
                         </div>

                     </div>
                     <div class="card-footer">
                         <div class="row ml-2">
                             <a class="btn btn-sm btn-primary text-uppercase mb-2"
                                href="/bootcards/<%= campground.author.username%>/<%= campground._id%>/fab">
                                 Comments & more
                             </a>
                             <span class="font-weight-light text-success ml-5 mt-1 ">
                                 <%= campground.comments.length%> :cm
                             </span>
                         </div>
                     </div>
                 </div>
             </div>
         <% }); %>
     </div>
</div>

<%- include('../partials/footer'); -%>

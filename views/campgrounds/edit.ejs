<%- include('../partials/header'); -%>
<div class="container">
    <div class="border-bottom p-2 mb-2 mt-4">
        <h6 class="text-info font-weight-light text-uppercase">
            Editing :
            <span class="text-uppercase text-danger">
                <%= campground.name%>
            </span> <br>
            from user :
            <span class="text-danger font-weight-bold">
                @<%= campground.author.username%>
            </span>
        </h6>
    </div>
    <div class="row mt-4">
        <div class="col-md-7">
            <form action="/bootcards/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input placeholder="post" class="form-control" type="text" name="campground[name]" value="<%=
                    campground.name %>">
                </div>
                <div class="form-group">
                    <input placeholder="post image url" class="form-control" type="text" name="campground[image]"
                           value="<%=
                    campground.image
                    %>">
                </div>
                <div class="form-group">
                    <textarea placeholder="post description" class="form-control" type="text"
                           name="campground[description]"><%= campground.description %></textarea>
                </div>
                <div class=" p-1 my-2">
                    <div>
                        <a href="/bootcards/<%= campground.author.username%>/<%= campground._id%>/fab" type="reset" class="btn btn-danger">
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-dark ml-2">
                            Complete
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer'); -%>


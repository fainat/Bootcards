<%- include('../partials/header'); -%>

<div class="container">
    <div class="border-bottom p-2 mb-2 mt-4">
        <h5 class="text-uppercase">
            Comment Editing
        </h5>
        <h6 class="text-info font-weight-light text-uppercase">
            comment author :
            <span class="text-uppercase text-danger font-weight-bold">
                @<%= comment.author.username%>
            </span>
        </h6>
    </div>
    <div class="row mt-4">
        <div class="col-md-7">
            <div class=" p-1 my-2">
                <form action="/bootcards/<%= campgroundAuthor%>/<%= campground_id %>/comment/<%= comment._id %>?_method=PUT"
                      method="POST">
                    <div class="form-group">
                        <textarea class="form-control" type="text"
                                  name="comment[text]"><%= comment.text %></textarea>
                    </div>
                    <div>
                        <a href="/bootcards/<%= campground_id%>" type="reset" class="btn btn-info btn-sm">
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-success btn-sm ml-2">
                            Edit Comment
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>

<%- include('../partials/footer'); -%>


<body>
<nav class="navbar navbar-default border-bottom">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="text-dark navbar-brand" href="<%= currentUser ? '#' : '/'%>">
                    Mashaddien
                    <span class="text-capitalize text-warning">
                        <%= currentUser && currentUser.username%>
                    </span>
                </a>
            </div>
            <div class="mr-5 d-flex userheader">
                <ul class="nav nav-item d-flex w-100">
                    <% if(!currentUser){ %>
                        <li><a href="/login" class="ml-3 text-dark text-decoration-none">Login</a></li>
                        <li><a href="/registration" class="ml-3 text-dark text-decoration-none">Sign Up</a></li>
                    <% } else { %>
                        <li class="border-right mr-1 pr-3">
                            <a href="/bootcards/<%= currentUser.username%>/profile">
                                Edit Profile
                            </a>
                        </li>
                        <li class="border-right">
                            <a href="/bootcards" class="ml-3 text-decoration-none text-success mr-2">
                                Boot Cards
                            </a>
                        </li>
                        <li>
                            <a href="/logout" class="ml-3 text-dark text-decoration-none">
                                Logout
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    